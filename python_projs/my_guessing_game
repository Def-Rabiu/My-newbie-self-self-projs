interest = input('Do you wanna play a game? ')
if interest == 'yes':
    while True:
        guess = input('Guess the number I am currently thinking of: ')
        if guess == '777':
            print("Wao, you're such a genius." )
            print("Thanks for playing.")
            break
        else:
            print("No man! You had it wrong.")
            guess2 = input("Do you mind trying again? ")
            if guess2 == 'yes':
                continue
            else:
                print("It's alright. I know you couldn't have guessed it right either way.")
                break
else:
    print("Oh no! I'm lonely. But if you insist, get the heck outta my sight! I'm gonna find someone else.")
    print("Bye!")
    print("Take care.")
    print("Have a nice day.")
